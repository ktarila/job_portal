{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
  <div class="container mx-auto mt-10">
    <div class="w-full flex items-center">
      <div class="hidden md:block w-2/3">
        <div class="w-3/4 mx-auto">
          <img src="/image/image.png">
        </div>
      </div>
      <div class="w-full md:w-1/3">
        <div class="w-full bg-gray-100  rounded shadow max-w-md mx-auto">
          <div class="w-full p-5">
            <div class="border-b border-gray-300">
              <h1 class="font-medium text-center text-3xl tracking-wide leading-wide mt-0 text-gray-800 p-5">
                 Please Sign in
              </h1>
            </div>
            <div class="py-4 px-8">
                   <form method="post">
        
                {% if error %}
                <div class="w-full bg-red-700 text-white p-3 my-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if app.user %}
                <div class="w-full bg-purple-200 text-white p-3 my-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
                {% endif %}
                <div class="w-full flex flex-wrap mt-5">
                    <div class="w-full my-3">
                        <label class="block tracking-wide text-gray-700 text-sm" for="inputEmail">Email</label>
                        <input class="h-12 block w-full bg-gray-200 border border-gray-200 text-gray-700 py-2 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="email" value="{{ last_username }}" name="email" placeholder="Email" id="inputEmail" required autofocus>
                    </div>
                    <div class="w-full my-3">
                        <label class="block tracking-wide text-gray-700 text-sm" for="inputPassword">Password</label>
                        <input type="password" placeholder="*********" name="password" id="inputPassword" class="h-12 block w-full bg-gray-200 border border-gray-200 text-gray-700 py-2 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" required>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <button class="mt-10 uppercase font-medium hover:bg-green-700 bg-green-600 text-white w-full px-4 py-3 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Sign in
                </button>
                <div class="w-full mt-5 flex justify-between">
                    <a href="{{path('app_forgot_password_request')}}"> Forgot Password?</a>
                    <a href="{{path('app_register')}}"> Register</a>

                </div>
                
            </form> 
                </div>

            
            <p class="text-center text-gray-500 text-xs">
              &copy;2020 Job Portal. All rights reserved.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
