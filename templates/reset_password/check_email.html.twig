{% extends 'base.html.twig' %}
{% block title %}Password Reset Email Sent{% endblock %}
{% block body %}
<div class="container mx-auto mt-10">
    <div class="w-full flex items-center">
        <div class="hidden md:block w-2/3">
            <div class="w-3/4 mx-auto">
                <img src="/image/image.png">
            </div>
        </div>
        <div class="w-full md:w-1/3">
            <div class="w-full bg-gray-100 rounded shadow max-w-md mx-auto">
                <div class="w-full p-5">
                    <div class="border-b border-gray-300">
                        <h1 class="text-center text-3xl tracking-wide leading-wide mt-0 text-gray-800 p-5">
                            Reset password
                        </h1>
                    </div>
                    <div class="py-4 px-8">
                        {% for flashError in app.flashes('verify_email_error') %}
                        <div class="bg-red-500 rounded font-medium text-white px-5 py-2 mb-5 w-full" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {% for successError in app.flashes('success') %}
                        <div class="bg-teal-500 rounded font-medium text-white p-2 mb-5 w-full" role="alert">{{ successError }}</div>
                        {% endfor %}
                        {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        <div class="mt-10"></div>
                        <p class="my-5">An email has been sent that contains a link that you can click to reset your password. This link will expire in {{ tokenLifetime|date('g') }} hour(s).</p>
                        <p class="my-5">If you don't receive an email please check your spam folder or <a class="text-blue-700 hover:text-orange-700" href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
                        <div class="mb-20"></div>
                        <p class="text-center text-gray-500 text-xs">
                            &copy;2020 Job Portal. All rights reserved.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}