{% extends 'base.html.twig' %}
{% block title %}Reset your password{% endblock %}
{% block body %}
<div class="container mx-auto mt-10">
    <div class="w-full flex items-center">
        <div class="hidden md:block w-2/3">
            <div class="w-3/4 mx-auto">
                <img src="/image/image.png">
            </div>
        </div>
        <div class="w-full md:w-1/3">
            <div class="w-full bg-gray-100 rounded shadow max-w-md mx-auto">
                <div class="w-full p-5">
                    <div class="border-b border-gray-300">
                        <h1 class="text-center text-3xl tracking-wide leading-wide mt-0 text-gray-800 p-5">
                            Reset your password
                        </h1>
                    </div>
                    <div class="py-4 px-8 mt-10">
                        {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <button class="mt-10 uppercase font-medium hover:bg-green-700 bg-green-600 text-white w-full px-4 py-3 rounded focus:outline-none focus:shadow-outline">Reset password</button>
                        {{ form_end(resetForm) }}
                        
                        </form>
                    </div>
                    <p class="text-center text-gray-500 text-xs mt-20">
                        &copy;2020 Job Portal. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}